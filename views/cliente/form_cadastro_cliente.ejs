    <%- include('../partials/sidebar.ejs') %> <%-
    include('../partials/header.ejs') %>
    <h2>Cadastro de Clientes</h2>
    <div class="row">
      <form action="/clientes" method="post" class="col s12">
        <ul class="stepper linear">
          <li class="step active">
            <div class="step-title waves-effect">Informações Pessoais</div>
            <div class="step-content">
              <div class="row">
                <div class="input-field col s12">
                  <label for="nome">Nome Completo</label>
                  <input type="text" name="nome" id="nome" required />
                </div>
              </div>

              <div class="row">
                <div class="input-field col s6">
                  <input type="date" name="nascimento" id="nascimento" />
                  <label for="nascimento">Nascimento</label>
                </div>

                <div class="input-field col s6">
                  <select name="genero" id="genero">
                    <option value="0" disabled>Selecione o Gênero</option>
                    <option value="M">Masculino</option>
                    <option value="F">Feminino</option>
                  </select>
                  <label for="genero">Gênero</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <label for="desconto">Desconto</label>
                  <input type="number" name="desconto" id="desconto" />
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <label for="telefone">Telefone</label>
                  <input type="text" name="telefone" id="telefone" required />
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <label for="email">E-mail</label>
                  <input type="text" name="email" id="email" required />
                </div>
              </div>

              <div class="row">
                <div class="input-field col s6">
                  <label for="senha">Senha</label>
                  <input type="password" name="senha" id="senha" required />
                </div>
                <div class="input-field col s6">
                  <label for="confirma">Confirmar</label>
                  <input
                    type="password"
                    name="confirma"
                    id="confirma"
                    required
                  />
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <label for="imagem">Imagem</label>
                  <input type="text" name="imagem" id="imagem" />
                </div>
              </div>
              <div class="step-actions">
                <!-- Here goes your actions buttons -->
                <button class="waves-effect waves-dark btn next-step">
                  Próximo
                </button>
              </div>
            </div>
          </li>
          <li class="step">
            <div class="step-title waves-effect">Endereço</div>
            <div class="step-content">
              <div class="row">
                <div class="input-field col s12">
                  <label for="endereco">Endereço</label>
                  <input type="text" name="endereco" id="endereco" />
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <label for="cidade">Cidade</label>
                  <input type="text" name="cidade" id="cidade" />
                </div>
                <div class="input-field col s6">
                  <label for="bairro">Bairro</label>
                  <input type="text" name="bairro" id="bairro" />
                </div>
              </div>
              <div class="step-actions">
                <!-- Here goes your actions buttons -->
                <button class="waves-effect waves-dark btn previous-step">
                  Anterior
                </button>
                <input type="hidden" name="cliente" id="cliente" value="true" />

        <%- include('../partials/buttons.ejs') %>
              </div>
            </div>
          </li>
          
        </ul>
      </form>
