<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/head.ejs') %>
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/sidebar.ejs') %> <%-
    include('../partials/header.ejs') %>
    <h2>Cosulta de Clientes</h2>
    <div class="row">
      <div class="input-field  col s12">
        <label for="pesquisa">Pesquisar:</label>
        <input type="text" />
      </div>
    </div>
      <table >
        <thead>
          <tr >
            <th>ID</th>
            <th>Nome</th>
            <th>Genero</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Desconto</th>
            <th>Dt Criado</th>
            <th>Dt Alterado</th>
            <th>Estado</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (clientes.length > 0){%> <% clientes.forEach(cliente=>{ %>
            <tr>
              <td><%= cliente._id%></td>
              <td><%= cliente.conta.nome%></td>
              <td><%= cliente.genero%></td>
              <td><%= cliente.conta.email%></td>
              <td><%= cliente.conta.telefone%></td>
              <td><%= cliente.desconto%></td>
              <td><%= cliente.createdAt%></td>
              <td><%= cliente.updatedAt%></td>
              <td><%= cliente.estado%></td>
              <td>
                <a class='dropdown-trigger btn-flat #eeeeee grey lighten-3' href='#' data-target='dropdown1'><i class="material-icons">more_vert</i></a>
                <ul id='dropdown1' class='dropdown-content'>
                  <li><a href="/clientes/update/<%= cliente._id%>">Editar</a></li>
                  <li><a href="#!">Activar / Desactivar</a></li>
                  <li><a href="#!">Ver</a></li>
                  <li><a href="#!">Marcar</a></li>
                </ul>
              </td>
              <% }) %> <% } else { %>
                <tr>
                  <td colspan="10">Sem Clientes para mostrar</td>
                </tr>
              <% } %>
            </tr>
        </tbody>
      </table>
    
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
