<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/head.ejs') %>
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/sidebar.ejs') %> 
    <%- include('../partials/header.ejs') %>
    <div class="card-header">
      <h2>Formulário de Cadastro - </h2>
    </div>
    <div class="container">
      <form action="/marcacoes" method="post" class="form-container">
        <div class="input-container">
          <label for="staff">Nome Funcionario</label>
          <select name="staff" id="staff" class="input-field">
            <% if (staffs.length > 0){%>
            <option value="-1" disabled selected>
              Selecione o Funcionario
            </option>
            <% staffs.forEach(staff=>{ %>
            <option value="<%= staff._id %>"><%= staff.conta.nome %></option>
            <% }) %> <% } else { %>
            <option disabled>Não há funcionarios para mostrar</option>
            <% } %>
          </select>
        </div>
        <div class="input-container">
          <label for="productoServico">Producto / Serviço</label>
          <select name="productoServico" id="productoServico" class="input-field">
            <% if (productosServicos.length > 0){%>
            <option value="" disabled selected>Selecione o Producto</option>
            <% productosServicos.forEach(productoServico=>{ %>
            <option value="<%= productoServico._id %>">
              <%= productoServico.productoServico %>
            </option>
            <% }) %> <% } else { %>
            <option disabled>Não há productos para mostrar</option>
            <% } %>
          </select>
        </div>
        <div class="input-container">
          <label for="cliente">Cliente</label>
          <select name="cliente" id="cliente" class="input-field">
            <% if (clientes.length > 0){%>
            <option value="" disabled selected>Selecione o Cliente</option>
            <% clientes.forEach(cliente=>{ %>
            <option value="<%= cliente._id %>">
              <%= cliente.conta.nome %>
            </option>
            <% }) %> <% } else { %>
            <option disabled>Não há clientes para mostrar</option>
            <% } %>
          </select>
        </div>
        <div class="input-container">
          <!-- Default data Today -->
          <label for="dataMarcacao">Data</label>
          <input
            type="date"
            placeholder="Selecione a Imagem."
            name="dataMarcacao"
            id="dataMarcacao"
            class="input-field"
          />
        </div>
        <div class="input-container">
          <!-- Default time Now -->
          <label for="horaMarcacao">Hora</label>
          <input
            type="time"
            placeholder="Selecione a Imagem."
            name="horaMarcacao"
            id="horaMarcacao"
            class="input-field"
          />
        </div>
        <div class="form-btn-container">
          <input type="button" value="Cadastrar">
          <input type="reset" value="Limpar">
        </div>
      </form>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
